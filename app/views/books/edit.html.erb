<h1>Editing Book</h1>
<!--ここからindexからの引用-->

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<% if @book.errors.any? %>

<div id="error_explanation">
<h2>2 errors prohibited this book from being saved:</h2>
<ul>
<li>Title can't be blank</li>
<li>Body can't be blank</li>
</ul>
</div>
<div class="field">
<div class="error_field">
<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>
</div>
<div class="field">
<div class="error_field">
<label for="book_body">Body</label>
<%= f.text_area :body %>
</div>
</div>

<% else %>
<div class="field">
<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>
<div class="field">
<label for="book_body">Body</label>
<%= f.text_area :body %>
</div>
<% end %>
<div class="button">
<%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to 'Show', "/books/#{@book.id}" %>
<span>|</span>
<%= link_to 'Back', "/books" %>
