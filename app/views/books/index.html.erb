<h1>Books</h1>

<table>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
<tr>
<!-- ここから一覧表示のためのループ処理 -->
<% @books.each do |book| %>
<td> <%= book.title %> </td>
<td> <%= book.body %> </td>
<td> <%= link_to 'Show', book_path(book.id) %> </td>
<td> <%= link_to 'Edit', edit_book_path(book.id) %> </td>
<td> <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure ??" %> </td>
</tr>
<% end %>
</table>

<h1>New Book</h1>

<%= form_for(@book, url: '/bookcreate') do |f| %>
<h4>タイトル</h4>
<%= f.text_field :title %>
<h4>本文</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
