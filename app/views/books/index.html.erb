<p id="notice">
<%=  notice %> <!--サクセスメッセージの表示-->
</p>

<h1>Books</h1>

<table>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
<tr>
<!-- ここから一覧表示のためのループ処理 -->
<% @books.each do |book| %>
<td> <%= book.title %> </td>
<td> <%= book.body %> </td>
<td> <%= link_to 'Show', book_path(book.id) %> </td>
<td> <%= link_to 'Edit', edit_book_path(book.id) %> </td>
<td> <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure ??" %> </td>
</tr>
<% end %>
</table>

<h2>New Book</h2>

<%= form_for(@book, url: '/books') do |f| %>
<% if @book.errors.any? %>

<div id="error_explanation">
<h2>2 errors prohibited this book from being saved:</h2>
<ul>
<li>Title can't be blank</li>
<li>Body can't be blank</li>
</ul>
</div>
<div class="field">
<div class="error_field">
<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>
</div>
<div class="field">
<div class="error_field">
<label for="book_body">Body</label>
<%= f.text_area :body %>
</div>
</div>

<% else %>
<div class="field">
<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>
<div class="field">
<label for="book_body">Body</label>
<%= f.text_area :body %>
</div>
<% end %>
<div class="button">
<%= f.submit 'Create Book' %>
</div>
<% end %>
