<h1>Books</h1>

<table>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
<tr>
<!-- ここから一覧表示のためのループ処理 -->
<% @books.each do |book| %>
<td> <%= book.title %> </td>
<td> <%= book.body %> </td>
<td>Show</td>
<td>Edit</td>
<td>Destroy</td>
</tr>
<% end %>
</table>

<h1>New Book</h1>

<%= form_for(@book, url: '/bookcreate') do |f| %>

<h4>タイトル</h4>
<%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <% end %>
